<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Main theme -->
    <style name="Theme.Noise" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_noise</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Noise</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Noise</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Noise</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Noise</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Noise</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_noise</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_noise</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Noise</item>
        
        <!-- general -->
        <item name="android:textCursorDrawable">@null</item> <!-- added -->
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
		<item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewmain</item>
		<item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
		<item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
		<item name="android:buttonStyle">@style/Buttonmain</item>
		<item name="android:imageButtonStyle">@style/ImageButtonmain</item>
		<item name="android:dropDownSpinnerStyle">@style/Spinnermain</item>
		<item name="android:progressBarStyleHorizontal">@style/ProgressBarmain</item>
		<item name="android:seekBarStyle">@style/SeekBarmain</item>
		<item name="android:ratingBarStyle">@style/RatingBarmain</item>
		<item name="android:ratingBarStyleIndicator">@style/RatingBarBigmain</item>
		<item name="android:ratingBarStyleSmall">@style/RatingBarSmallmain</item>
		<item name="android:buttonStyleToggle">@style/Togglemain</item>	
		<item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>
		<item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_light</item>			
		<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
    </style>
    
    <!-- Fullscreen Theme -->
    <style name="Theme.Noise.Fullscreen" parent="@style/Theme.Noise">
        <item name="android:windowActionBarOverlay">true</item>
    	<item name="android:windowFullscreen">true</item>
    	<item name="android:windowActionBar">false</item>
    	<item name="android:windowTitleSize">0dp</item>
	</style>
	
	<!-- Action Bar -->
    <style name="ActionBar.Solid.Noise" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:displayOptions">showHome|homeAsUp|useLogo</item> <!-- added -->
        <item name="android:background">@drawable/ab_solid_noise</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_noise</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_noise</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Noise</item>
    </style>

    <style name="ActionBar.Transparent.Noise" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_noise</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Noise</item>
    </style>
	
    <style name="PopupMenu.Noise" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_noise</item>	
    </style>
	
    <style name="DropDownListView.Noise" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_noise</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Noise.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Noise</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Noise</item>
    </style>

</resources>