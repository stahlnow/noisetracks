    <!-- Fullscreen Theme -->
    <style name="Theme.Noise.Fullscreen" parent="@style/Theme.Noise">
        <item name="android:windowActionBarOverlay">true</item>
    	<item name="android:windowFullscreen">true</item>
    	<item name="android:windowActionBar">false</item>
    	<item name="android:windowTitleSize">0dp</item>
	</style>

    <style name="ActionBar.Solid.Noise" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="displayOptions">showHome|homeAsUp|useLogo</item> <!-- added -->
        <item name="background">@drawable/ab_solid_noise</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_noise</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_noise</item>
