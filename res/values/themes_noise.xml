    <style name="ActionBar.Transparent.Noise" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_noise</item>
        <item name="progressBarStyle">@style/ProgressBar.Noise</item>
        
