<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- light theme colors -->
    <color name="background_light">#ffeeeeee</color>
    <color name="rimColor_light">#33000000</color>

    <!-- dark theme colors -->
    <color name="background_dark">#ff000000</color>
    <color name="rimColor_dark">#33333333</color>

    <!-- colors / styles -->
    <color name="indicator">#ffe33535</color>
    <color name="transparent">#00000000</color>
    <color name="white">#ffffffff</color>
    <color name="light_grey">#ffcccccc</color>
    <color name="dark_grey">#ff333333</color>
    <color name="black">#ff000000</color>

    <style name="edit_text" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:height">40sp</item>
    </style>
    
    <style name="actionbar_tab_style" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <style name="list_view_style" parent="@android:style/Widget.ListView">
        <item name="android:dividerHeight">1px</item>
    </style>
     <style name="list_view_style.light">
        <item name="android:divider">@color/light_grey</item>
    </style>
     <style name="list_view_style.dark">
        <item name="android:divider">@color/dark_grey</item>
    </style>

    <!-- base theme android:Theme.Holo.NoActionBar.Fullscreen -->
    <style name="CustomTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/edit_text</item>
        <item name="android:actionBarTabStyle">@style/actionbar_tab_style</item>
    </style>
    
    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CustomTheme.Light">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:listViewStyle">@style/list_view_style.light</item>
        <!-- wheel -->
        <item name="barColor">@color/indicator</item>
        <item name="rimColor">@color/rimColor_light</item>
        <item name="textColor">@color/light_grey</item>
        <!-- pulltorefresh -->
        <item name="ptrHeaderTextColor">@color/light_grey</item>
    </style>
    
    <style name="CustomTheme.Dark">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:listViewStyle">@style/list_view_style.dark</item>
        <!-- wheel -->
        <item name="barColor">@color/indicator</item>
        <item name="rimColor">@color/rimColor_dark</item>
        <!-- pulltorefresh -->
        <item name="ptrHeaderTextColor">@color/dark_grey</item>
    </style>

</resources>